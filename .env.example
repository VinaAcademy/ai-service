# Application
APP_NAME=chatbot-service
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=8000
ENVIRONMENT=development

# Eureka
EUREKA_SERVER_URL=http://localhost:8761/eureka
INSTANCE_HOST=localhost
INSTANCE_PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/vinaacademy_chatbot
SYNC_DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/vinaacademy_chatbot

# LangChain / LLM
OPENAI_API_KEY=your-openai-api-key-here
MODEL_NAME=gpt-3.5-turbo
TEMPERATURE=0.7
MAX_TOKENS=500

# Redis (Optional)
REDIS_URL=redis://localhost:6379/0

# Kafka (Optional)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=chat-events

# Logging
LOG_LEVEL=INFO